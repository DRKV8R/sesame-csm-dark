FROM runpod/pytorch:2.2.1-py3.10-cuda12.1.1-devel-ubuntu22.04

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    # Audio processing
    ffmpeg \
    libavcodec-dev \
    libavformat-dev \
    libavutil-dev \
    libswresample-dev \
    libswscale-dev \
    sox \
    libsox-fmt-all \
    # System utilities
    git \
    curl \
    wget \
    unzip \
    # Cleanup
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Environment variables
ENV PYTHONPATH=/app:/app/csm_repo:$PYTHONPATH
ENV VOICE_MODEL_REPO=BiggestLab/csm-1b
ENV DEFAULT_SPEAKER_ID=0
ENV MAX_LENGTH_MS=30000
ENV GENERATION_LIMIT=200
ENV FFMPEG_BINARY=/usr/bin/ffmpeg
ENV TORCHAUDIO_BACKEND=ffmpeg
ENV HF_HOME=/workspace/hf_cache
ENV CUDA_LAUNCH_BLOCKING=0
ENV TORCH_CUDNN_V8_API_ENABLED=1

# Install Python dependencies
COPY voice-worker/requirements.txt .
RUN pip install --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r requirements.txt

# Clone and setup CSM repository
RUN git clone https://github.com/SesameAILabs/csm.git csm_repo && \
    cd csm_repo && \
    pip install --no-cache-dir -e . && \
    python -c "from generator import load_csm_1b; print('CSM import test passed')"

# Copy application files
COPY voice-worker/handler.py ./handler.py
COPY voice-worker/training.py ./training.py

# Create workspace directories
RUN mkdir -p /workspace/voice_loras /workspace/hf_cache /workspace/temp && \
    chmod -R 755 /workspace

# Create non-root user
RUN useradd -m -u 1000 -s /bin/bash runpod && \
    chown -R runpod:runpod /app /workspace

# Switch to non-root user
USER runpod

# Pre-warm imports
RUN python -c "import torch; import torchaudio; import librosa; import whisper; print('Voice imports successful')"

# Health check
HEALTHCHECK --interval=30s --timeout=15s --start-period=120s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8000/health', timeout=10)"

# Labels
LABEL maintainer="David Hamilton 2025"
LABEL description="Sesame CSM Voice Training & Generation Worker"
LABEL version="1.0.0"
LABEL repository="https://github.com/drkv8r/sesame-csm-dark"

# Start the handler
CMD ["python", "-u", "handler.py"]
